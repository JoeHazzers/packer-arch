{
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "ArchLinux_64",
      "guest_additions_mode": "disable",
      "iso_url": "http://www.mirrorservice.org/sites/ftp.archlinux.org/iso/2014.11.01/archlinux-2014.11.01-dual.iso",
      "iso_checksum": "a140bb9d182d2c5260132fe4ab68a5d438b16671",
      "iso_checksum_type": "sha1",
      "ssh_username": "root",
      "ssh_password": "vagrant",
      "shutdown_command": "echo 'packer' | sudo -S shutdown -P now",
      "http_directory": "scripts",
      "boot_wait": "10s",
      "boot_command": [
        "<enter><wait10><wait10>",
        "curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/install.sh<enter><wait5>",
        "bash ./install.sh<enter>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "scripts/virtualbox.sh",
      "only": ["virtualbox-iso"]
    },
    {
      "type": "shell",
      "script": "scripts/vagrant.sh"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "arch64.box",
      "compression_level": 9
    }
  ]
}
